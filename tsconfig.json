{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@core": ["src/core"],
      "@core/*": ["src/core/*"],
      "@controller": ["src/http/controller"],
      "@controller/*": ["src/http/controller/*"],
      "@domain": ["src/domain"],
      "@domain/*": ["src/domain/*"],
      "@infrastructure": ["src/infrastructure"],
      "@infrastructure/*": ["src/infrastructure/*"],
      "@response": ["src/http/response"],
      "@response/*": ["src/http/response/*"],
      "@utils": ["src/utils"],
      "@utils/*": ["src/utils/*"],
      "@utilsTest": ["src/utilsTest"],
      "@utilsTest/*": ["src/utilsTest/*"],
      "@useCase": ["src/useCase"],
      "@useCase/*": ["src/useCase/*"]
    }
  }
}
